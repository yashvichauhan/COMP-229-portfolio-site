<%- include('../partials/header.ejs') %>

<%- include('../partials/main_nav.ejs') %>

<!-- Content for the Add page -->
<div class="container mainAreaContainer">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <section id="contact" >
                <div class="containerLogin">
                  <div class="row">
                    <div class="col-sm-12">
                      <div class="contact-mf">
                        <div id="login" class="box-shadow-full">
                          <div class="row">
                            <div class="col-md-12">
                              <div class="title-box-2">
                                <h5 class="title-left">
                                  Edit Contact
                                </h5>
                              </div>
                              <div>
                                <form role="form" class="my-email-form" method="POST">
                                    <div class="col-md-12 mb-3">
                                        <label for="nameTextField">Name</label>
                                          <div class="form-group">
                                            <input type="text" class="form-control" value="<%= contact.name %>" name="name" id="name" required>
                                          </div>
                                    </div>
                                    <div class="col-md-12 mb-3">
                                    <label for="nameTextField">Email</label>
                                      <div class="form-group">
                                        <input type="email" class="form-control" value="<%= contact.email %>" name="email" id="email" required>
                                      </div>
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <label for="nameTextField">Role</label>
                                          <div class="form-group">
                                            <input type="text" class="form-control" value="<%= contact.role %>" name="role" id="role" required>
                                          </div>
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <label for="nameTextField">Phone</label>
                                          <div class="form-group">
                                            <input type="text" class="form-control" value="<%= contact.contactNumber %>" name="contactNumber" id="contactNumber" required>
                                          </div>
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <label for="nameTextField">Company</label>
                                            <div class="form-group">
                                            <input type="text" class="form-control" value="<%= contact.company %>" name="company" id="company" required>
                                            </div>
                                    </div>
                                    <div class="col-md-12 text-center mt-3">
                                      <button type="submit" class="button button-a button-big button-rouded">Update</button>
                                      <button type="button" class="button button-a button-big button-rouded"><a href="/contact-list">Cancel</a></button>
                                    </div>
                                </form>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </section>
        </div>

    </div>
</div>
<%- include('../partials/footer.ejs') %>